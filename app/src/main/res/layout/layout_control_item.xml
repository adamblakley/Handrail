<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/parent_layout"
    android:layout_width="match_parent" android:layout_height="wrap_content" android:padding="15dp">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/imageCircle_control_item_image"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_centerVertical="true"
        android:layout_marginStart="15dp"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="15dp"
        app:civ_border_width="2dp"
        app:civ_border_color="@color/colorPrimaryDark"
        android:src="@drawable/ic_action_control"
        tools:src="@drawable/ic_action_control" />

    <TextView
        android:id="@+id/textView_control_item_position"
        android:layout_width="30dp"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerVertical="true"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="25dp"
        android:layout_toRightOf="@id/imageCircle_control_item_image"
        android:ellipsize="end"
        android:gravity="center"
        android:scrollHorizontally="true"
        android:singleLine="true"
        android:text="00"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/textView_control_item_name"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerVertical="true"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="25dp"
        android:layout_toRightOf="@id/textView_control_item_position"
        android:text="No Name Available"
        android:gravity="center"
        android:scrollHorizontally="true"
        android:ellipsize="end"
        android:textSize="20sp"
        android:singleLine="true" />

    <Button
        android:id="@+id/button_control_item_info"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginStart="30dp"
        android:layout_marginLeft="30dp"
        android:layout_marginEnd="10dp"
        android:layout_marginRight="10dp"
        android:background="@drawable/handrail_button"
        android:textColor="#FFFFFF"
        android:padding="10dp"
        android:layout_toEndOf="@+id/textView_course_item_name"
        android:layout_toRightOf="@+id/textView_control_item_name"
        android:text="Info" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@+id/imageCircle_control_item_image"
        android:layout_marginTop="10dp"
        android:background="@color/colorPrimaryDark" />


</RelativeLayout>