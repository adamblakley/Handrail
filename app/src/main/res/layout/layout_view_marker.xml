<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/parent_layout"
    android:layout_width="match_parent" android:layout_height="wrap_content" android:padding="15dp">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/marker_image"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:src="@drawable/ic_action_control"
        tools:src="@drawable/ic_action_control" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="1"
        android:id="@+id/marker_position"
        android:layout_toRightOf="@id/marker_image"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="25dp"
        android:textSize="20sp"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Control Name"
        android:id="@+id/marker_name"
        android:layout_toRightOf="@id/marker_position"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="10dp"
        android:textSize="20sp"
        />

    <TextView
        android:id="@+id/marker_note"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/marker_name"
        android:layout_toRightOf="@id/marker_position"
        android:text="Control Note"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="10dp"
        />

</RelativeLayout>