<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.orienteering.handrail">
    <!--
         The ACCESS_COARSE/FINE_LOCATION permissions are not required to use
         Google Maps Android API v2, but you must specify either coarse or fine
         location permissions for the 'MyLocation' functionality.
    -->
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_BACKGROUND_LOCATION" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.CAMERA" />


    <uses-feature
        android:name="android.hardware.camera"
        android:required="false" />

    <application
        android:name=".utilities.App"
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher_playstore"
        android:label="@string/app_name"
        android:requestLegacyExternalStorage="true"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        android:usesCleartextTraffic="true">



        <activity android:name=".create_course.CreateCourseActivity"
            android:label="Create A Course"
            android:parentActivityName=".home_menu.HomeActivity" />
        <activity android:name=".toproutes.TopRoutesActivity"
            android:label="Top 5 Routes"
            android:parentActivityName=".home_menu.HomeActivity" />
        <activity android:name=".performance.PerformanceActivity"
            android:label="View Performance"
            android:parentActivityName=".home_menu.HomeActivity" />
        <activity android:name=".course.CourseActivity"
            android:label="View Course"
            android:parentActivityName=".home_menu.HomeActivity" />
        <activity android:name=".create_event.CreateEventActivity"
            android:label="Create Event"
            android:parentActivityName=".home_menu.HomeActivity" />
        <activity android:name=".edit_profile.EditProfileActivity"
            android:label="Edit Profile"
            android:parentActivityName=".home_menu.HomeActivity" />
        <activity android:name=".signup.SignupActivity"
            android:label="Sign up" />
        <activity android:name=".events_history.EventsHistoryActivity"
            android:label="Performance History"
            android:parentActivityName=".home_menu.HomeActivity" />
        <activity android:name=".courses.CoursesActivity"
            android:label="Manage Courses"
            android:parentActivityName=".home_menu.HomeActivity" />
        <activity android:name=".welcome.WelcomeActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".password_update.PasswordUpdateActivity"
            android:label="Update Password" />
        <activity android:name=".events.EventsActivity"
            android:label="View Events"
            android:parentActivityName=".home_menu.HomeActivity" />
        <activity android:name=".event.EventActivity"
            android:label="View Event"
            android:parentActivityName=".home_menu.HomeActivity" />
        <activity android:name=".results.ResultsActivity"
            android:label="Event Results"
            android:parentActivityName=".home_menu.HomeActivity" />
        <activity android:name=".manage_events.ManageEventsActivity"
            android:label="Manage Events"
            android:parentActivityName=".home_menu.HomeActivity" />
        <activity android:name=".edit_event.EditEventActivity"
            android:label="Edit Event"
            android:parentActivityName=".home_menu.HomeActivity" />

        <meta-data
            android:name="com.google.android.geo.API_KEY"
            android:value="@string/google_maps_key" />
        <activity
            android:name=".course_participation.CourseParticipationActivity"
            android:label="Event Participation" />
        <activity
            android:name=".home_menu.HomeActivity"
            android:label="Handrail" />

        <receiver
            android:name=".geofence_utilities.GeofenceBroadcastReceiver"
            android:enabled="true"
            android:exported="true" />

        <uses-library
            android:name="org.apache.http.legacy"
            android:required="false" />

        <provider
            android:name="androidx.core.content.FileProvider"
            android:authorities="com.orienteering.handrail.fileprovider"
            android:exported="false"
            android:grantUriPermissions="true">
            <meta-data
                android:name="android.support.FILE_PROVIDER_PATHS"
                android:resource="@xml/provide_paths" />
        </provider>
    </application>

</manifest>